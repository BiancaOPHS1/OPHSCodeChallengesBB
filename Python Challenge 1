print("-----ROCK,PAPER AND SCISSORS-----")

import random

computer = random.randint(1,3)
user = int(input("enter your choice> 1 = rock// 2 = paper // 3 = scissors"))

if computer == user:
  print("draw")
elif computer == 1 and user == 3:
  print("I win")
elif computer == 2 and user ==1:
  print("I win")
elif computer == 3 and user ==2:
  print("I win")
else:
  print("you win")





