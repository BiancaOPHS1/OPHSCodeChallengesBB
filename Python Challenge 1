times_table = int(input("enter a number from 1-12"))

for number in range(0,15):
  result = number * times_table
  print(result)
 
  




while True:
  times_table = int(input("enter a number from 1-12"))
  for number in range(0,15):
    result = number * times_table
    print(result)
  
