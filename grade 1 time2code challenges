#----------------
#subprogram
#converts centigrade to fahrenheit
#----------------

def c_to_f():
   fahrenheit = (centigrade * 1.8) + 32
   return fahrenheit
  
#----------------
#main program
#----------------

centigrade = int(input("enter centigrade to nearest whole number:"))
print("the temperature in fahrenheit is " , c_to_f () )










# Fish tank volume problem

# -------------------------
# Subprograms
# -------------------------
def volume(length, width, height):
  water_vol = (length * width * height)/1000
  

def litres_to_gallons(litres):
  gallons = liters/4.546


# -------------------------
# Main program
# -------------------------
length = int(input("enter length to the nearest whole number"))
width = int(input("enter width to the nearest whole number"))
height = int(input("enter height to the nearest whole number"))
litres =  int(input("enter liters to the nearest whole number"))
gallons = int(input("enter gallons to the nearest whole number"))


print("A", length, "x", width, "x", height, "cm tank is", litres, "litres and", gallons, "imperial gallons.")




